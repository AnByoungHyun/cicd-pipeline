pipeline {
    agent any
    triggers {
        githubPush()
    }
    stages {
        stage('docker tcp connect') {
            steps {
                script {
                    docker.withServer() {
                        docker.image('nginx:latest').withRun() {
                            /* do things */
                            sh 'echo "It Works"'
                        }
                    }
                }
            }
        }
        stage('test') {
            steps {
                sh 'curl localhost:8000'
            }
        }
    }
}