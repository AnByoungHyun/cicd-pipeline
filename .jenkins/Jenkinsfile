pipeline {
    agent {
        docker {
            image 'nginx:latest'
            args '-p 8000:8000 --name nginx'
            reuseNode true
        }
    }
    triggers {
        githubPush()
    }
    stages {
        stage('location check') {
            steps {
                sh 'ls -la /usr/share/nginx/'
            }
        }
        stage('copy source') {
            steps {
                sh 'sudo cp ./src/* /usr/share/nginx/html/'
            }
        }
        stage('curl test') {
            steps {
                sh 'curl -s localhost:8000'
            }
        }
    }
}