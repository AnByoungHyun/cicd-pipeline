pipeline {
    agent {
        docker {
            image 'nginx:latest'
            args '-u root --name nginx'
            reuseNode true
        }
    }
    triggers {
        githubPush()
    }
    stages {
        stage('copy source') {
            steps {
                sh 'cp ./src/* /usr/share/nginx/html/'
            }
        }
        stage('curl test') {
            steps {
                sh 'curl -s -I localhost | grep -E "HTTP/.+2[0-9]{2} OK"'
            }
        }
    }
}