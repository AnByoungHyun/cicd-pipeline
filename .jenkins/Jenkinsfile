pipeline {
    agent {
        docker {
            image 'nginx:latest'
            args '-p 8000:8000'
            reuseNode true
            withServer 'tcp://docker-server:2375'
        }
    }
    triggers {
        githubPush()
    }
    stages {
        stage('docker tcp connect & test') {
            steps {
                sh 'echo testing...'
            }
        }
    }
}